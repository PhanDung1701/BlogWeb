@model BlogWeb.Models.Post
@{
    Layout = "_DetailLayout";
}

<div class="main_blog_details">
    <div class="post-thumbnail">
        @if (!string.IsNullOrEmpty(Model.Thumbnail))
        {
            <img src="@Url.Content($"~/uploads/post/{Model.Thumbnail}")" alt="@Model.Title" style="width: 100%; height: auto;">
        }
        else
        {
            <img src="/img/default-thumbnail.png" alt="Default Thumbnail" style="width: 100%; height: auto;">
        }
    </div>
    <a href="#"><h4>@Model.Title</h4></a>
    <div class="user_details">
        <div class="float-left">
            <a href="#">@Model.Category?.CategoryName</a>
        </div>
        <div class="float-right mt-sm-0 mt-3">
            <div class="media">
                <div class="media-body">
                    <h5>@Model.User?.Username</h5>
                    <p>@Model.CreatedAt?.ToString("d MMM yyyy")</p>
                </div>
            </div>
        </div>
    </div>
    <div class="post-content">
        @Html.Raw(Model.Content)
    </div>
</div>

<!-- Khung danh sách bình luận -->
<div class="comment-section">
    <h4>Bình luận</h4>
    <div class="comment-list">
        <!-- Comments will be dynamically inserted here by JavaScript -->
    </div>
</div>

<div class="comment-form">
    <h4>Thêm bình luận</h4>
    <form>
        <div class="form-group form-inline">
            <div class="form-group col-lg-6 col-md-6 name">
                <input type="text" class="form-control" id="name" placeholder="Tên hiển thị" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tên hiển thị'">
            </div>
            <div class="form-group col-lg-6 col-md-6 email">
                <input type="email" class="form-control" id="email" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
            </div>
        </div>
        <div class="form-group">
            <textarea class="form-control mb-10" rows="5" name="message" placeholder="Nội dung bình luận" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nội dung bình luận'" required=""></textarea>
        </div>
        <a href="#" class="button submit_btn">Bình luận</a>
    </form>
</div>

<style>
    .post-content {
        line-height: 1.2; /* Khoảng cách giữa các dòng */
        font-size: 1rem; /* Kích thước chữ có thể điều chỉnh theo nhu cầu */
        text-align: justify; /* Căn chỉnh đều hai bên */
        margin-bottom: 20px; /* Khoảng cách dưới nội dung chữ nếu cần */
    }

    .comment-section {
    /* Khung viền của khung danh sách bình luận */
        padding: 20px; /* Khoảng cách bên trong khung */
        margin-bottom: 20px; /* Khoảng cách dưới khung */
    }

    .comment-list {
        border-top: 1px solid #ddd; /* Viền trên của danh sách bình luận */
        padding-top: 10px; /* Khoảng cách giữa tiêu đề và danh sách bình luận */
    }

        .comment-list .single-comment {
            border-bottom: 1px solid #ddd; /* Viền dưới mỗi bình luận */
            padding-bottom: 10px; /* Khoảng cách dưới mỗi bình luận */
            margin-bottom: 8px; /* Khoảng cách giữa các bình luận */
        }

            .comment-list .single-comment .desc {
                font-size: 0.8rem; /* Kích thước chữ bình luận */
            }
</style>
