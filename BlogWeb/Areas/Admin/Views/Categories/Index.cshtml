@model IEnumerable<BlogWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<body>
    <div class="card">
        <h5 class="card-header">Quản lý danh mục</h5>
        <div style="text-align: right; padding-right: 20px;">
            <a href="/Admin/Categories/Create" class="btn btn-primary">Thêm mới</a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã danh mục</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Hoạt động</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.CategoryId</th>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td>
                                    <a href="/Admin/Categories/Edit/@item.CategoryId" class="btn btn-primary">Sửa</a>
                                    <a href="/Admin/Categories/Delete/@item.CategoryId" class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
