@model BlogWeb.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Cập nhật danh mục</h5>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Categories" asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Tên danh mục</label>
                        <input type="text" class="form-control" asp-for="CategoryName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Mô tả</label>
                        <input type="text" class="form-control" asp-for="Description" />
                    </div>
                    <div class="form-group">
                        <a href="/Admin/Categories/Index" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Sửa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>