@model BlogWeb.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Sửa bài viết</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Posts" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PostId" />
                    <input type="hidden" asp-for="Thumbnail" />
                    <div class="mb-3">
                        <label class="form-label">Tiêu đề</label>
                        <input class="form-control" type="text" asp-for="Title" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="Thumbnail">Thumbnail</label>
                        <input type="file" id="Thumbnail" name="Thumbnail" class="form-control" />
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Người viết</label>
                            <select asp-for="UserId" asp-items="@ViewBag.UserId" class="form-select" required>
                                <option label="Người viết"></option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Danh mục</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="form-select" required>
                                <option label="Danh mục"></option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bài viết</label>
                        <textarea class="form-control" asp-for="Content" id="Content"></textarea>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Ngày viết</label>
                            <input class="form-control" type="date" asp-for="CreatedAt" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ngày sửa</label>
                            <input class="form-control" type="date" asp-for="UpdatedAt" />
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" value="true" />
                                <label class="form-check-label" for="IsActive">Hiển thị</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsFeatured" value="true" />
                                <label class="form-check-label" for="IsFeatured">Hot</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsTrend" value="true" />
                                <label class="form-check-label" for="IsTrend">Trend</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="/Admin/Posts/Index" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Sửa bài</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/asests/lib/select2/css/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Content').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}
